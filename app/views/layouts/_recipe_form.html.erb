<%= render "layouts/errors", :object => @recipe %>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
  <%= f.label :instructions %>
  <%= f.text_field :instructions %>
  <% if @tags.any? %>
    <ul> 
    <form method = "post">
      <% @tags.each do |tag|  %>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="<%= tag.name %>" name = "<%= tag.id%>" id="<%= tag.id%>">
          <label class="form-check-label" for=""><%= tag.name %></label>  
        </div>
      <% end %>
    </ul> 
  <% end %>
  <%= f.submit %>
<% end %>